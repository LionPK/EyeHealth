<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:padding="16dp"
    android:scrollbars="none"
    tools:context="com.crud.singl.eyehealth.startup.GuestActivity"
    tools:showIn="@layout/activity_guest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Eye Health Menu"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

        <GridLayout
            android:layout_width="377dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:columnCount="1">

            <LinearLayout
                android:id="@+id/button_new"
                style="@style/HomeItemLayoutStyle1"
                android:background="@drawable/shape_home_item_3">

                <ImageView
                    style="@style/HomeItemImageStyle"
                    android:src="@drawable/intro_pic" />

                <TextView
                    style="@style/HomeItemLabelStyle"
                    android:textStyle="bold"
                    android:text="แนะนำการดูแลสุขภาพสายตา" />
            </LinearLayout>
        </GridLayout>

        <GridLayout
            android:layout_width="377dp"
            android:layout_height="268dp"
            android:layout_gravity="center_horizontal"
            android:columnCount="1">

            <Button
                android:id="@+id/btnLoginGuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ลงชื่อเข้าใช้งานระบบ"
                android:textSize="18dp" />
        </GridLayout>

    </LinearLayout>
</ScrollView>