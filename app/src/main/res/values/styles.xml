<resources>

    <!-- them ทั่วไปของ app -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- กำหนด them เองตรงนี้. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TopIcon">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="TopFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gen_black</item>
    </style>

    <style name="TopTimeFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gen_black</item>
    </style>

    <style name="ListRowIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>


    <!-- Menu main styles -->
    <style name="HomeItemLayoutStyle1">
        <item name="android:layout_width">373dp</item>
        <item name="android:layout_height">145dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">top|center</item>
        <item name="android:padding">5dp</item>

    </style>

    <style name="HomeItemLayoutStyle">
        <item name="android:layout_width">184dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">top|center</item>
        <item name="android:padding">2dp</item>

    </style>

    <style name="HomeItemImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HomeItemLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


</resources>
